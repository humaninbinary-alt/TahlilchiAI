# =============================================================================
# TahlilchiAI Custom Chats - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# -----------------------------------------------------------------------------
# Project Configuration
# -----------------------------------------------------------------------------
PROJECT_NAME="TahlilchiAI Custom Chats"
VERSION="0.1.0"
API_V1_PREFIX="/api/v1"

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
HOST="0.0.0.0"
PORT=8000
DEBUG=True

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection details
POSTGRES_SERVER=localhost
POSTGRES_USER=tahlilchi
POSTGRES_PASSWORD=tahlilchi_dev_password
POSTGRES_DB=tahlilchi_db
POSTGRES_PORT=5432

# Full database URL (auto-constructed if not provided)
# DATABASE_URL=postgresql+psycopg2://tahlilchi:tahlilchi_dev_password@localhost:5432/tahlilchi_db

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Secret key for JWT tokens (CHANGE THIS IN PRODUCTION!)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# -----------------------------------------------------------------------------
# Pagination
# -----------------------------------------------------------------------------
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# -----------------------------------------------------------------------------
# Optional: pgAdmin Configuration (for development)
# -----------------------------------------------------------------------------
PGADMIN_EMAIL=admin@tahlilchi.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Qdrant Vector Database
# -----------------------------------------------------------------------------
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# -----------------------------------------------------------------------------
# Ollama LLM Configuration
# -----------------------------------------------------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_TIMEOUT=60

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=change-this-jwt-secret-key-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_FREE_USER=100
RATE_LIMIT_FREE_TENANT=1000
RATE_LIMIT_FREE_CREDITS=100
RATE_LIMIT_PRO_USER=1000
RATE_LIMIT_PRO_TENANT=10000
RATE_LIMIT_PRO_CREDITS=1000
ADMIN_BYPASS_TOKEN=change-this-admin-token-in-production

# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=info
