# =============================================================================
# TahlilchiAI Production Environment Configuration
# =============================================================================
# Copy to .env.production and fill in real secrets. NEVER commit actual secrets.
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
PROJECT_NAME="TahlilchiAI Production"
API_V1_PREFIX="/api/v1"
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
CORS_ALLOWED_ORIGINS=https://app.tahlilchi.com,https://admin.tahlilchi.com
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_TIMEOUT_MINUTES=60

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_SERVER=db-prod.internal
POSTGRES_PORT=5432
POSTGRES_DB=tahlilchi_prod
POSTGRES_USER=${POSTGRES_USER:-tahlilchi}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-ChangeThisPassword}
DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}:${POSTGRES_PORT}/${POSTGRES_DB}

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=redis-prod.internal
REDIS_PORT=6379
REDIS_PASSWORD=ChangeThisRedisPass123!
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/1
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# -----------------------------------------------------------------------------
# Qdrant Vector Store
# -----------------------------------------------------------------------------
QDRANT_URL=https://qdrant-prod.internal:6333
QDRANT_API_KEY=ReplaceWithQdrantKey

# -----------------------------------------------------------------------------
# Ollama LLM
# -----------------------------------------------------------------------------
OLLAMA_BASE_URL=http://ollama-prod.internal:11434
OLLAMA_MODEL=qwen2.5:7b
LLM_TEMPERATURE=0.5
LLM_MAX_TOKENS=800
LLM_TIMEOUT=90

# -----------------------------------------------------------------------------
# Security / JWT
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=ReplaceWith64CharRandomString_e.g._openssl_rand_-base64_48
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Rate Limiting (Production values)
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_FREE_USER=100
RATE_LIMIT_FREE_TENANT=1000
RATE_LIMIT_FREE_CREDITS=100
RATE_LIMIT_PRO_USER=1000
RATE_LIMIT_PRO_TENANT=10000
RATE_LIMIT_PRO_CREDITS=2000
RATE_LIMIT_ENTERPRISE_CREDITS=10000
ADMIN_BYPASS_TOKEN=ChangeThisAdminBypassToken

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
SENTRY_DSN=
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus

# -----------------------------------------------------------------------------
# Email / Notifications
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=ChangeThisEmailPassword
ALERT_EMAIL=alerts@tahlilchi.com

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
STORAGE_DIR=/data/uploads
BACKUP_DIR=/backups

# -----------------------------------------------------------------------------
# Misc
# -----------------------------------------------------------------------------
MAX_UPLOAD_SIZE_MB=50
